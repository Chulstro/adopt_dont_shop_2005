<h1><%= link_to "Shelter List", "/shelters" %></h1>
<h2>Edit <%= link_to @shelter.name, "/shelters/#{@shelter.id}" %></h2>

<%= form_tag "/shelters/#{@shelter.id}", method: :patch do %>
  <%= label_tag :name %>
  <%= text_field_tag :name %>
  <%= label_tag :address %>
  <%= text_field_tag :address %>
  <%= label_tag :city %>
  <%= text_field_tag :city %>
  <%= label_tag :state %>
  <%= text_field_tag :state %>
  <%= label_tag :zip %>
  <%= text_field_tag :zip %>
  <%= submit_tag "Update Shelter" %>
<% end %>
